{
  "version": 1,
  "device_lists": [
    {
      "id": "sony_projector",
      "name": "Sony VPL-PWZ10",
      "type": "tcp",
      "connection": {
        "ip": "192.168.1.100",
        "port": 53595
      },
      "commands": [
        {
          "id": "power_on",
          "name": "Power On",
          "command": "power \"on\"\r\n",
          "type": "write"
        },
        {
          "id": "power_off",
          "name": "Power Off",
          "command": "power \"off\"\r\n",
          "type": "write"
        }
      ]
    }
  ],
  "pages": [
    {
      "name": "Projector Control",
      "controls": [
        {
          "name": "Power On",
          "type": "button",
          "command": "power_on",
          "device": "sony_projector"
        },
        {
          "name": "Power Off",
          "type": "button",
          "command": "power_off",
          "device": "sony_projector"
        }
      ]
    }
  ]
}
