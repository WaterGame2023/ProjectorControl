{
  "about": {
    "name": "LG TV Integration, should use RS232 over IP adapters, otherwise use the LG over Serial file",
    "template_version": "3.0.5",
    "config_version": "1.2",
    "author": "Mia Hanson"
  },
  "adapters": [
    {
      "id": "lg_tv_east_adapter",
      "name": "LG EAST TV Adapter",
      "model": "GenericNetworkAdapter",
      "ip": "tcp://10.0.37.114:9761",
      "ports": [
        {
          "id": "lg_tv_east",
          "name": "LG_East Power Off",
          "methods": [
            {
              "id": "power",
              "name": "Power",
              "type": "actions",
              "command": "ka 01 %\r\n",
              "params": [
                {
                  "id": "on",
                  "name": "Power On",
                  "value": "01"
                },
                {
                  "id": "off",
                  "name": "Power Off",
                  "value": "00"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "lg_tv_south_adapter",
      "name": "LG SOUTH TV Adapter",
      "model": "GenericNetworkAdapter",
      "ip": "tcp://10.0.37.82:9761",
      "ports": [
        {
          "id": "lg_tv_south",
          "name": "LG_South Power Off",
          "methods": [
            {
              "id": "power",
              "name": "Power",
              "type": "actions",
              "command": "ka 01 %\r\n",
              "params": [
                {
                  "id": "on",
                  "name": "Power On",
                  "value": "01"
                },
                {
                  "id": "off",
                  "name": "Power Off",
                  "value": "00"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "lg_tv_pillar_adapter",
      "name": "LG PILLAR TV Adapter",
      "model": "GenericNetworkAdapter",
      "ip": "tcp://10.0.37.37:9761",
      "ports": [
        {
          "id": "lg_tv_pillar",
          "name": "LG_Pillar Power Off",
          "methods": [
            {
              "id": "power",
              "name": "Power",
              "type": "actions",
              "command": "ka 01 %\r\n",
              "params": [
                {
                  "id": "on",
                  "name": "Power On",
                  "value": "01"
                },
                {
                  "id": "off",
                  "name": "Power Off",
                  "value": "00"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "rules": {
    "zr_meeting_started": [
      "lg_tv_east.power.on",
      "lg_tv_south.power.on",
      "lg_tv_pillar.power.on"
    ],
    "zr_meeting_ended": [
      "lg_tv_east.power.off",
      "lg_tv_south.power.off",
      "lg_tv_pillar.power.off"
    ]
  },
  "styles": []
}